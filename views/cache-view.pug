mixin openmodal(name)
    button.openmodal.dropdown-item(type="button", data-bs-toggle="modal",
        data-bs-target="#changeVars", modal-data=name)= name

form.cache-options
    .dropdown
        button.btn.dropdown-toggle(type="button", id="memoryOptions",
            data-bs-toggle="dropdown", aria-expanded="false") Memory Options
        .dropdown-menu(aria-labelledby="memoryOptions")
            a.dropdown-item(href="#") Memory Size
            +openmodal("Memory Start Address")

    .dropdown.dropdown-hover
        button.btn.dropdown-toggle(type="button", id="cacheOptions",
            data-bs-toggle="dropdown", aria-expanded="false") Cache Options
        .dropdown-menu(aria-labelledby="cacheOptions")
            +openmodal("Cache number")
            +openmodal("Cache size")
            +openmodal("Dirty bit")
            +openmodal("Valid bit")
            +openmodal("Replacement Policy")
            +openmodal("Change Variable Settings")

.cache-view
    .col-md
        h2.text-center Cache L1
        table.table.p-2.text-center
            thead
                tr
                    th(scope="col") Valid
                    th(scope="col") Dirty
                    th(scope="col") Tag
                    th(scope="col") Dirty

    .col-md
        h2.text-center Cache L2
        table.table.p-2.text-center
            thead
                tr
                    th(scope="col") Valid
                    th(scope="col") Dirty
                    th(scope="col") Tag
                    th(scope="col") Dirty
    .col-md
        h2.text-center Cache L3
        table.table.p-2.text-center
            thead
                tr
                    th(scope="col") Valid
                    th(scope="col") Dirty
                    th(scope="col") Tag
                    th(scope="col") Dirty
    .col-md
        h2.text-center Memory
        table.table.p-2.text-center
            thead
                tr
                    th(scope="col") Address
                    th(scope="col") Value
.cache-menu
    .cache-controls
        .item
            button#previous
                a.fa-solid.fa-backward
        .item#playpause
            button
                a.fa-solid.fa-play
        .item#next
            button
                a.fa-solid.fa-forward
    .cache-progress
        .progress(role="progressbar" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100")
            .progress-bar(id="progress-bar", style="width: 55%") 55%