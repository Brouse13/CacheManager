form.cache-options
    .dropdown
        button.btn.dropdown-toggle(type="button", id="memoryOptions",
            data-bs-toggle="dropdown", aria-expanded="false") Memory Options
        .dropdown-menu(aria-labelledby="memoryOptions")
            a.dropdown-item(href="#") Memory Size
            a.dropdown-item(href="#") Memory Start Address

    .dropdown.dropdown-hover
        button.btn.dropdown-toggle(type="button", id="cacheOptions",
            data-bs-toggle="dropdown", aria-expanded="false") Cache Options
        .dropdown-menu(aria-labelledby="cacheOptions")
            a.dropdown-item(href="#") Cache number
            a.dropdown-item(href="#") Dirty bit
            a.dropdown-item(href="#") Valid bit
            a.dropdown-item(href="#") Replacement policy
            a.dropdown-item(href="#") Associativity

.cache-view
    .col-md
        h2.text-center Cache L1
        table.table.p-2.text-center
            thead
                tr
                    th(scope="col") Valid
                    th(scope="col") Dirty
                    th(scope="col") Tag
                    th(scope="col") Dirty

    .col-md
        h2.text-center Cache L2
        table.table.p-2.text-center
            thead
                tr
                    th(scope="col") Valid
                    th(scope="col") Dirty
                    th(scope="col") Tag
                    th(scope="col") Dirty
    .col-md
        h2.text-center Cache L3
        table.table.p-2.text-center
            thead
                tr
                    th(scope="col") Valid
                    th(scope="col") Dirty
                    th(scope="col") Tag
                    th(scope="col") Dirty
    .col-md
        h2.text-center Memory
        table.table.p-2.text-center
            thead
                tr
                    th(scope="col") Address
                    th(scope="col") Value
.cache-menu
    .cache-controls
        .item
            button#backward-fast
                i.fa-solid.fa-backward-fast
        .item
            button#backward
                a.fa-solid.fa-backward
        .item#playpause
            button
                a.fa-solid.fa-play
        .item#forward
            button
                a.fa-solid.fa-forward
        .item#foward-auto
            button
                i.fa-solid.fa-forward-fast
    .cache-progress
        .progress(role="progressbar" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100")
            .progress-bar(id="progress-bar", style="width: 55%") 55%