.cache-menu
    .cache-controls
        .item
            button#previous
                a.fa-solid.fa-backward
        .item#playpause
            button
                a.fa-solid.fa-play
        .item#next
            button
                a.fa-solid.fa-forward
    .cache-progress
        .progress(role="progressbar" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100")
            .progress-bar(id="progress-bar", style="width: 0%") 0%